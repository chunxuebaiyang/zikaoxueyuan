.index-nav{
  display: flex;
  flex-wrap:wrap;
}
.index-nav .nav-item{
  width:33.333333%;
  height:160rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  font-size:12px;
  color:#aaa; 
}
.index-nav .nav-item image{
  width:80rpx;
  height:80rpx;
  margin-bottom: 10rpx;
}
.floor{
  height:15rpx;
  background-color:#eee;
}
.study-title{
  padding:15rpx;
}
.study-title text{
  position: relative;
  font-size: 15px;
  font-weight: normal;
  color: #212121;
  padding-left:10px;
}
.study-title text:after {
    content: '';
    position: absolute;
    z-index: 0;
    top: 3px;
    left: 0;
    width: 3px;
    height: 15px;
    background: #634bf0;
    border-radius: 3px;
}
.study-item{
  box-shadow: 0 2px 9px #dcdcdc;
  display: block;
  background: #fff;
  border-radius: 5px;
  margin: 15rpx 15rpx 0 15rpx;
  padding: 15rpx;
}
.study-flex{
  padding-bottom:10rpx;
  border-bottom: 1px dashed #d9d9d9;
  display: flex;
  align-items: center;
  position: relative;
}
.study-flex .house{
  font-size: 15px;
  flex: 1;
}
.study-flex .time{
  color: #fe5a69;
  font-size: 13px;
}
.study-course-title{
  padding:10rpx 0;
  font-size: 14px;
}
.study-course-title :first-child{
  margin-bottom: 10rpx;
}
.study-course-title :last-child{
  color:#999;
  font-size:12px;
}
.study-flex-TUser{
  margin-right: 5rpx;
  width: 70rpx;
  height: 70rpx;
}
.study-flex-TUser image{
  margin-right: 10rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius:50%;
}
.study-flex-title{
  font-size:13px;
  color:#333;
}
.study-course-button{
  padding-top:15rpx;
  display: flex;
  justify-content:flex-start;
}
.study-course-button button{
  border: 1px solid #cccccc;
  border-radius: 3px;
  background: none;
  font-size: 0.75rem;
  padding: 0.1rem 0.3rem;
  position: relative;
  height: 50rpx;
  width:200rpx;
  line-height:1;
}
.study-course-button image{
  height:30rpx;
  width:30rpx;
}