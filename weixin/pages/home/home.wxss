/* pages/home/home.wxss */
.slider,.slider swiper,.slider image{
  height:160px;
  width:100%;
}
.index-nav{
  display: flex;
  flex-wrap:wrap;
}
.index-nav .nav-item{
  width:33.333333%;
  height:160rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  font-size:12px;
  color:#aaa; 
}
.index-nav .nav-item image{
  width:80rpx;
  height:80rpx;
  margin-bottom: 10rpx;
}
.floor{
  height:15rpx;
  background-color:#eee;
}
.home-title{
  padding:15rpx;
}
.home-title text{
  position: relative;
  font-size: 15px;
  font-weight: normal;
  color: #212121;
  padding-left:10px;
}
.home-title text:after {
    content: '';
    position: absolute;
    z-index: 0;
    top: 3px;
    left: 0;
    width: 3px;
    height: 15px;
    background: #634bf0;
    border-radius: 3px;
}
/* 热门推荐 */
.home-ad{
  padding:0 15rpx;
}
.home-ad image{
  height:150px;
  width:100%;
}
/* list */
.home-list{
  position: relative;
  padding: 15rpx
}
.home-flex{
  display: flex;
  align-items: center;
  position: relative;
}
.home-img {
    width: 30px;
    height: 30px;
    margin-right: 20rpx;
}
.home-img image {
    width: 100%;
    height: 100%;
    display: block;
    border: none;
    border-radius: 5rpx;
}
.home-flex-box{
  flex: 1;
  min-width: 0;
  font-size: 14px;
  color: #333;
}
.home-flex-box .floor1{
    font-weight: normal;
    color: #333;
    font-size: 16px;
    display: block;
}
.home-flex-box .floor2{
    font-weight: normal;
    color: #9e9e9e;
    font-size: 12px;
}
.floor1 text{
  background-color: #fe5a69;
  font-size: 10px;
  color:#fff;
  border-radius: 20px;
  padding: 0 5rpx;
}
.home-flex-follow image{
  width:30rpx;
  height:30rpx;
}
.home-flex-follow text{
  color: #f00;
  font-size:15px;
  margin-top:20rpx;
}
.home-flex-follow button{
  color:#f1f1f1;
  border-radius: 20px;
  height: 45rpx;
  width: 100rpx;
  margin: 0;
  padding: 0;
  line-height: 1
}
.home-text-head text{
  font-size:13px;
}
.text{
  color:blue;
}
.home-text-img{
  display: flex;
  flex-wrap:wrap;
  margin-top: 10rpx;
}
.home-text-img .text-list{
  width: 31%;
  height: 250rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 7rpx;
}
.home-text-img .text-list image{
  width:100%;
}
.home-text-bottom{
  position: relativel;
  padding: 15rpx 0;
  margin-bottom: 10px;
}
.home-text-bottom-item{
  display: block;
  float: left;
  text-align: center;
  color: #717171;
  width: 33.333%;
  font-size: 0.8rem;
  position: relative;
}
.home-text-bottom-item image{
  background-size: 13px;
  width: 13px;
  height: 13px;
  position: absolute;
  left: 50%;
  margin-left: -30px;
  top:10rpx;
}
.home-flex-follow button{
  border: 1px solid #f00;
}
.share{
  position: absolute;
  width:100rpx;
  height:40rpx;
  background: #ff0;
  margin-left:30px;
  opacity: 0;
}