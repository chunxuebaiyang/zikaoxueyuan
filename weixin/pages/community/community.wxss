/* pages/community/community.wxss */
.community-title{
  padding:15rpx;
}
.community-title text{
  position: relative;
  font-size: 15px;
  font-weight: normal;
  color: #212121;
  padding-left:10px;
}
.community-title text:after {
    content: '';
    position: absolute;
    z-index: 0;
    top: 3px;
    left: 0;
    width: 3px;
    height: 15px;
    background: #634bf0;
    border-radius: 3px;
}
.scroll-x{
    height:380rpx;
    white-space:nowrap;
    display:flex;
    padding-top:20rpx;
}
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
.view-parent{
    display:inline-block;
    margin-left:20rpx 
}
.view-parent image{
  width:500rpx;
  height:300rpx;
  border-radius: 20rpx;
}
.view-item{
  width:50px;
  height:50px;
  display:flex;
  font-size:15px;
  margin-top:10rpx;
  margin-left:5rpx;
}
.lick{
  position: relative;
  padding: 0 15px 15px 15px;
  overflow: hidden;
}
.lick navigator{
  width: 50%;
  float: left;
  position: relative;
  z-index: 0;
  padding: 0.1rem 0;
  font-size: 0.85rem;
  color: #7b7b7b;
  text-align: left;
}
.lick text{
  font-size:14px;
}
.lick navigator :first-child{
  background-image: linear-gradient(to right,#ff995a,#fe5a69);
  background-color: #fe5a69;
  border-radius: 100%;
  width: 33rpx;
  height: 33rpx;
  display: block;
  float: left;
  text-align: center;
  color: #fff;
  line-height: 18px;
  margin-right: 0.2rem;
  margin-top:5rpx; 
}

.home-list{
  position: relative;
  padding: 15rpx
}
.home-flex{
  display: flex;
  align-items: center;
  position: relative;
}
.home-img {
    width: 30px;
    height: 30px;
    margin-right: 20rpx;
}
.home-img image {
    width: 100%;
    height: 100%;
    display: block;
    border: none;
    border-radius: 5rpx;
}
.home-flex-box{
  flex: 1;
  min-width: 0;
  font-size: 14px;
  color: #333;
}
.home-flex-box .floor1{
    font-weight: normal;
    color: #333;
    font-size: 16px;
    display: block;
}
.home-flex-box .floor2{
    font-weight: normal;
    color: #9e9e9e;
    font-size: 12px;
}
.floor1 text{
  background-color: #fe5a69;
  font-size: 10px;
  color:#fff;
  border-radius: 20px;
  padding: 0 5rpx;
}
.home-flex-follow image{
  width:30rpx;
  height:30rpx;
}
.home-flex-follow text{
  color: #f00;
  font-size:15px;
  margin-top:20rpx;
}
.home-flex-follow button{
  color:#f1f1f1;
  border-radius: 20px;
  height: 45rpx;
  width: 100rpx;
  margin: 0;
  padding: 0;
  line-height: 1
}
.home-text-head text{
  font-size:13px;
}
.text{
  color:blue;
}
.home-text-img{
  display: flex;
  flex-wrap:wrap;
  margin-top: 10rpx;
}
.home-text-img .text-list{
  width: 31%;
  height: 250rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 7rpx;
}
.home-text-img .text-list image{
  width:100%;
}
.home-text-bottom{
  position: relativel;
  padding: 15rpx 0;
  margin-bottom: 10px;
}
.home-text-bottom-item{
  display: block;
  float: left;
  text-align: center;
  color: #717171;
  width: 33.333%;
  font-size: 0.8rem;
  position: relative;
}
.home-text-bottom-item image{
  background-size: 13px;
  width: 13px;
  height: 13px;
  position: absolute;
  left: 50%;
  margin-left: -30px;
  top:10rpx;
}
.home-flex-follow button{
  border: 1px solid #f00;
}
.share{
  position: absolute;
  width:100rpx;
  height:40rpx;
  background: #ff0;
  margin-left:30px;
  opacity: 0;
}